<?xml version="1.0"?>
<robot name="block">
  <link name="world"/>
  
  <link name="base_link">
    <!-- 主体视觉和碰撞 -->
    <visual>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>

    <!-- 左耳 -->
    <visual>
      <geometry>
        <box size="0.1 0.15 0.025"/>
      </geometry>
      <origin xyz="-0.175 0.0 0.05" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.15 0.025"/>
      </geometry>
      <origin xyz="-0.175 0.0 0.05" rpy="0 0 0"/>
    </collision>

    <!-- 右耳 -->
    <visual>
      <geometry>
        <box size="0.1 0.15 0.025"/>
      </geometry>
      <origin xyz="0.175 0.0 0.05" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.15 0.025"/>
      </geometry>
      <origin xyz="0.175 0.0 0.05" rpy="0 0 0"/>
    </collision>

    <!-- 质量惯性（合并计算） -->
    <inertial>
      <!-- <mass value="0.5"/>
      <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.0025"/> -->

      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>

    </inertial>
  </link>

  <!-- Floating joint to make the block freely movable -->
  <joint name="floating" type="floating">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 -1.0 0.9" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo物理属性配置 -->
  <gazebo reference="base_link">
    <material>Gazebo/Red</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <maxContacts>20</maxContacts>
  </gazebo>
</robot>
